@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!-- MainContent -->
<div class="sign-in-page">
    <div class="container">
        <div class="row justify-content-center align-items-center height-self-center">
            <div class="col-lg-7 col-md-12 align-self-center">
                <div class="sign-user_card ">
                    <div class="sign-in-page-data">
                        <div class="sign-in-from w-100 m-auto">
                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Input.Name">Name</label>
                                            <input asp-for="Input.Name" type="text" class="form-control mb-0"
                                                placeholder="Enter Full Name" autocomplete="off" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Input.Email">E-mail</label>
                                            <input asp-for="Input.Email" type="email" class="form-control mb-0"
                                                placeholder="Enter email" autocomplete="off" required>
                                            <small><span asp-validation-for="Input.Email" class="text-danger"></span></small>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Input.Password">Password</label>
                                            <input asp-for="Input.Password" type="password" class="form-control mb-0"
                                                   placeholder="Password" required>
                                            <small><span asp-validation-for="Input.Password" class="text-danger"></span></small>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Input.ConfirmPassword">Repeat Password</label>
                                            <input asp-for="Input.ConfirmPassword" type="password" class="form-control mb-0"
                                                   placeholder="Password" required>
                                            <small><span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span></small>
                                        </div>
                                    </div>

                                </div>

                                <button id="registerSubmit" type="submit" class="btn btn-hover my-2">Register</button>

                            </form>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="d-flex justify-content-center links">
                            Already have an account? <a asp-page="./Login" class="text-primary ml-2">Log In</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- MainContent End-->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
