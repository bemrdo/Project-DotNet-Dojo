@page
@model Project_DotNet_Dojo.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<!-- MainContent -->
<section class="sign-in-page">
    <div class="container">
        <div class="row justify-content-center align-items-center height-self-center">
            <div class="col-lg-5 col-md-12 align-self-center">
                <div class="sign-user_card ">
                    <div class="sign-in-page-data">
                        <div class="sign-in-from w-100 m-auto">
                            <h3 class="mb-3 text-center">Sign in</h3>
                            <form class="mt-4" method="post">
                                <div class="form-group">
                                    <input asp-for="Model.Email" type="email" class="form-control mb-0" id="email" placeholder="Enter email" autocomplete="off" required>
                                    <small><span asp-validation-for="Model.Email" class="text-danger"></span></small>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Model.Password" type="password" class="form-control mb-0" id="password" placeholder="Password" required>
                                    <small><span asp-validation-for="Model.Password" class="text-danger"></span></small>
                                </div>

                                <div class="sign-info">
                                    <button type="submit" class="btn btn-hover">Sign in</button>
                                    <div class="custom-control custom-checkbox d-inline-block">
                                        <input asp-for="Model.RememberMe" type="checkbox" class="custom-control-input" id="customCheck">
                                        <label asp-for="Model.RememberMe" class="custom-control-label ml-3" for="customCheck">Remember Me</label>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="d-flex justify-content-center links">
                            Don't have an account? <a href="./Signup" class="text-primary ml-2">Sign Up</a>
                        </div>
                        <div class="d-flex justify-content-center links">
                            <a href="reset-password.html" class="f-link">Forgot your password?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- MainContent End-->