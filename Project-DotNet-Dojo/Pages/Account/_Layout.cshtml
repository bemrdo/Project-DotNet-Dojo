@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<!doctype html>
<html lang="en-US">

<head>
   <!-- Required meta tags -->
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <meta http-equiv="X-UA-Compatible" content="ie=edge">
   <title>@ViewData["Title"] - DojoMovie</title>
   <!-- Favicon -->
   <link rel="shortcut icon" href="~/images/favicon.ico" />
   <!-- Bootstrap CSS -->
   <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />
   <!-- Typography CSS -->
   <link rel="stylesheet" href="~/css/typography.css" asp-append-version="true" />
   <!-- Style -->
   <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
   <!-- Responsive -->
   <link rel="stylesheet" href="~/css/responsive.css" asp-append-version="true" />
   <!-- swiper -->
   <link rel="stylesheet" href="~/css/swiper.min.css" asp-append-version="true" />
   <link rel="stylesheet" href="~/css/swiper.css" asp-append-version="true" />
</head>

<body>
   <!-- loader Start -->
   <div id="loading">
      <div id="loading-center">
      </div>
   </div>
   <!-- loader END -->

   @RenderBody()


   <div class="rtl-box">
      <button type="button" id="flip" class="btn btn-light rtl-btn">
         <svg xmlns="http://www.w3.org/2000/svg" width="30px" height="30px" viewBox="0 0 20 20" fill="white">
            <path fill-rule="evenodd"
               d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z"
               clip-rule="evenodd" />
         </svg>
      </button>
      <div class="rtl-panel" id="panel">
         <ul class="modes">
            <li class="dir-btn" data-mode="rtl" data-active="false" data-value="ltr"><a href="#">LTR</a></li>
            <li class="dir-btn" data-mode="rtl" data-active="true" data-value="rtl"><a href="#">RTL</a></li>
         </ul>
      </div>
   </div>
   <!-- MainContent End-->
   <!-- back-to-top -->
   <div id="back-to-top">
      <a class="top" href="#top" id="top"> <i class="fa fa-angle-up"></i> </a>
   </div>
   <!-- back-to-top End -->
   <!-- jQuery, Popper JS -->
   <script src="~/js/jquery-3.5.1.min.js" asp-append-version="true"></script>
   <script src="~/js/popper.min.js" asp-append-version="true"></script>
   <!-- Bootstrap JS -->
   <script src="~/js/bootstrap.min.js" asp-append-version="true"></script>
   <!-- owl carousel Js -->
   <script src="~/js/owl.carousel.min.js" asp-append-version="true"></script>
   <!-- select2 Js -->
   <script src="~/js/select2.min.js" asp-append-version="true"></script>
   <!-- Magnific Popup-->
   <script src="~/js/jquery.magnific-popup.min.js" asp-append-version="true"></script>
   <!-- Custom JS-->
   <script src="~/js/custom.js" asp-append-version="true"></script>
   <script src="~/js/rtl.js" asp-append-version="true"></script>
   <!-- gsap JS -->
   <script src="~/plugin/gsap/gsap.min.js" asp-append-version="true"></script>
   <script src="~/js/gsap-scripts.js" asp-append-version="true"></script>
   <!-- Swiper JS -->
   <script src="~/js/swiper.min.js" asp-append-version="true"></script>
   <script src="~/js/swiper.js" asp-append-version="true"></script>

   @await RenderSectionAsync("Scripts", required: false)

</body>

</html>